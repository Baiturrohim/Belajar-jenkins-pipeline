pipeline {
    agent {
      node {
	label "linux && java11" 	
       }
      }        
    stages {
        stage("Build") {
            steps {
                echo "Hello Build"
            }
        }
	stages {
        stage("Test") {
            steps {
                echo "Hello Test"	
	     }		
	}
	stages {
        stage("Deploy") {
            steps {
                echo "Hello Deploy"
	     }
	}	

    }
	post {
	 always {
	    echo "I will always say Hello again!"
	}
	success {
	  echo "Alhamdulillah success"
	}
	failure {
	 echo "Oh no, failure"
	}
	cleanup {
	 echo "Don't care succes or error"
      }
    }
}
